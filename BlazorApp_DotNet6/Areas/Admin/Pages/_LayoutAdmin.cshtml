@using Microsoft.AspNetCore.Components.Web

@namespace BlazorApp_DotNet6.Areas.Admin.Pages

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link rel="manifest" href="~/Admin/pwa/admin_manifest.json">
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />

    @* NOTE: This is admin specific style..... *@
    <link href="Admin/css/style.css" rel="stylesheet" />


    <link href="BlazorApp_DotNet6.styles.css" rel="stylesheet" />

    <component type="typeof(HeadOutlet)" render-mode="Server" />
</head>
<body>
    <h3>ADMIN AREA _LayoutAdmin.cshtml</h3>
    @RenderBody()

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script type="text/javascript">
        //service worker always need https connection -- must if you need this.
        if ('serviceWorker' in navigator) {
            navigator.serviceWorker.register('/admin/pwa/service-worker.js',
                {
                    scope: '/Admin'
                }
            );
        }


    </script>
</body>
</html>
